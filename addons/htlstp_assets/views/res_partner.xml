<odoo>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res_partner_form_inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_partner_assets" type="object" class="oe_stat_button" icon="fa-desktop" attrs="{'invisible': [('asset_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <field name="asset_count" class="o_stat_value"/>
                        <span class="o_stat_text">IT Assets</span>
                    </div>
                </button>
                <button name="action_view_owner_assets" type="object" class="oe_stat_button" icon="fa-desktop" attrs="{'invisible': [('owner_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <field name="owner_count" class="o_stat_value"/>
                        <span class="o_stat_text">IT Assets</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>