<odoo>
    <record id="asset_device_type_tree_view" model="ir.ui.view">
        <field name="name">asset_device_type_tree_view</field>
        <field name="model">asset.device.type</field>
        <field name="arch" type="xml">
            <tree string="Type" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="asset_device_type_action" model="ir.actions.act_window">
        <field name="name">Device Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.device.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>